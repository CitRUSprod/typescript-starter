{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2019",
        "module": "commonjs",
        "strict": true,
        "importHelpers": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "src",
        "paths": {
            "$/*": ["*"]
        }
    },
    "include": ["src/**/*", "__tests__/**/*"]
}
